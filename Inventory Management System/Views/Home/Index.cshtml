@{
    ViewData["Title"] = "Welcome to Inventory";
    Layout = "_Layout"; // Ensure you are using your default layout
}

<style>
    /*
               IMPORTANT: The 'body' styles here are now handled by _Layout.cshtml.
               These styles here will only affect elements specific to this page that are NOT 'body'.
               This section correctly styles your 'Welcome to Inventory' text container.
            */

    /* This wrapper will center the text within the *available space*
               of your main content section (between header and footer). */

    body {
        background-image: url('/images/s8.jpg'); /* Path to your image */
        background-size: cover; /* Ensures the image covers the entire viewport */
        background-position: center center; /* Centers the image */
        background-repeat: no-repeat; /* Prevents the image from tiling */
        background-attachment: fixed; /* Keeps the background fixed when scrolling */
        min-height: 100vh; /* Ensures the background covers the full viewport height */
        margin: 0; /* Remove default body margin */
    }

        /* Optional: Create an overlay to make text even more readable */
        body::before {
            content: "";
            position: fixed; /* Use fixed to cover entire viewport regardless of scroll */
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.3); /* Dark semi-transparent overlay */
            z-index: -1; /* Place it behind all content */
        }

    .main-content-centered {
        display: flex;
        flex-direction: column; /* For vertical alignment of text */
        justify-content: center; /* Center content vertically */
        align-items: center; /* Center content horizontally */
        flex-grow: 1; /* Make this div take up all available vertical space */
        min-height: calc(100vh - var(--header-height, 60px) - var(--footer-height, 40px)); /* Adjust heights as needed */
        padding: 20px; /* Add some padding around the central container */
    }

    .welcome-text-container {
        text-align: center;
        /* Styles for light gray background box over the image */
        background-color: rgba(245, 245, 245, 0.9); /* Light gray with 90% opacity */
        color: #333; /* Dark gray text for contrast on light background */
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2); /* Lighter, subtle text shadow */
        padding: 30px 40px; /* More padding inside the box */
        border-radius: 10px; /* Rounded corners for the box */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2); /* Soft shadow for depth */
    }

        .welcome-text-container h1 {
            font-size: 4.5em; /* This font size will now be constant */
            font-weight: bold;
            margin-bottom: 0; /* Remove default margin */
            line-height: 1.2;
        }

</style>

<div class="main-content-centered">
    <div class="welcome-text-container">
        <h1>Welcome to Inventory</h1>
    </div>
</div>
